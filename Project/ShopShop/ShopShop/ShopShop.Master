                    <asp:MenuItem NavigateUrl="~/AddProduct.aspx" Text="Manage Items" Value="Admin"></asp:MenuItem>
                </Items>
                <StaticHoverStyle BackColor="#666666" ForeColor="White" />
                <StaticMenuItemStyle HorizontalPadding="5px" VerticalPadding="2px" />
                <StaticSelectedStyle BackColor="#1C5E55" />
            </asp:Menu>
            &nbsp; &nbsp; <input type="text" name="search" placeholder="Search" />
            &nbsp; &nbsp;
            <asp:ImageButton ID="ImageButton2" runat="server" Height="40px" ImageUrl="~/Image/shopping-cart.png" PostBackUrl="~/Cart.aspx" Width="40px" />

